# Maintainer: Roman Neuhauser <neuhauser+smrt@sigpipe.cz>
pkgname=smrt
pkgver=__VERSION__
pkgrel=1
pkgdesc="SUSE Maintenance Reject Tool"
arch=(any)
url="https://github.com/openSUSE/$pkgname"
license=(MIT)
depends=(curl haveopt openssh osc repose svn xmlstarlet zsh)
checkdepends=(cram make haveopt repose svn xmlstarlet zsh)
source=($pkgname-$pkgver.tar.gz)
sha1sums=(SKIP)

build()
{
  _in_src ./configure --prefix=/usr
  _in_src make
}

check()
{
  _in_src make check
}

package()
{
  _in_src make install DESTDIR="$pkgdir/"
}

_in_src()
(
  cd "$srcdir/$pkgname-$pkgver"
  "$@"
)
